<idea-plugin>

    <id>dev.aafanasev.kakaomaker</id>

    <name>Kakao Maker</name>

    <vendor email="tafanasyev@gmail.com" url="https://afanasev.dev">Github</vendor>

    <description><![CDATA[Generate Kakao screens from Android Studio]]></description>

    <idea-version since-build="171"/>

    <depends>com.intellij.modules.androidstudio</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>

        <action
                id="dev.aafanasev.kakaomaker.idea.GenerateKakaoScreenAction"
                class="dev.aafanasev.kakaomaker.idea.GenerateKakaoScreenAction"
                text="Generate Kakao screen from XML File...">

            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>

        </action>

    </actions>

</idea-plugin>